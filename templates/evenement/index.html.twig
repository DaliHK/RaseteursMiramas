{% extends 'baseAdmin.html.twig' %}

{% block title %}Evenement index
{% endblock %}

{% block body %}
	<h1>Liste des événements</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Date</th>
				<th>Date de fin</th>
				<th>Nombre de participants max</th>
				<th>Niveau requis</th>
				<th>Description</th>
				<th>Categorie</th>
				<th>Titre</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for evenement in evenements %}
				<tr>
					<td>{{ evenement.id }}</td>
					<td>{{ evenement.dateDebut ? evenement.dateDebut|date('d-m-Y') : '' }}</td>
					<td>{{ evenement.dateFin ? evenement.dateFin|date('d-m-Y') : '' }}</td>
					<td>{{ evenement.nombreParticipantMax }}</td>
					<td>{{ evenement.niveauRequis }}</td>
					<td>{{ evenement.description }}</td>
					<td>{{ evenement.categorie }}</td>
					<td>{{ evenement.titre }}</td>
					<td>
						<a class="btn btn-primary" href="{{ path('evenement_show', {'id': evenement.id}) }}">Voir</a>
						<a class="btn btn-primary" href="{{ path('evenement_edit', {'id': evenement.id}) }}">Editer</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="9">Pas d'enregistrements</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a class="btn btn-primary" href="{{ path('evenement_nouveau') }}">Créer un nouvel événement</a>
{% endblock %}
