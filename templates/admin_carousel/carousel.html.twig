{% extends 'baseAdmin.html.twig' %}

{% block title %}AdminCarousel{% endblock %}

{% block body %}

    <div class="container">
        {% if picture %}
        <div class="row"> 
                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="{{ asset('uploads/carousel/' ~ picture.0.photo1) }}" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="{{ asset('uploads/carousel/' ~ picture.0.photo2) }}" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="{{ asset('uploads/carousel/' ~ picture.0.photo3) }}" alt="Third slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="{{ asset('uploads/carousel/' ~ picture.0.photo4) }}" alt="Third slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Précedent</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Suivant</span>
                    </a>
                </div>
             </div>
        {% else %}
             <!-- Carousel d'exemple quand il y a pas de photo -->
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-50" src="https://ipsumimage.appspot.com/640x360" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-50" src="https://ipsumimage.appspot.com/640x360" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-50" src="https://ipsumimage.appspot.com/640x360" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Précedent</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Suivant</span>
                </a>
            </div>
        {% endif %}
            <!-- Le boutton supprimer apparait si il y a un carousel déja existant -->
            <div class="row">
                {% if picture %}
                    <!-- Supprimer le carousel -->
                    <a href="{{ path('delete_picture_carousel',{'id' : picture.0.id })}}" class="btn btn-primary">Supprimer</a>

                {% else %}

                    <div class="row mb-4"> Ajouter vos photos</div>
                    <div class="row justify-content-center mt-4">
                                
                        {{ form_start(carousel) }}
                                
                        {{ form_row(carousel.photo1,{'attr':{'placeholder':"image1"}})}}
                        {{ form_row(carousel.photo2,{'attr':{'placeholder':"image2"}})}}
                        {{ form_row(carousel.photo3,{'attr':{'placeholder':"image3"}})}}
                        {{ form_row(carousel.photo4,{'attr':{'placeholder':"image4"}})}}
                                
                            <div class=" row justify-content-center"> 
                                <button type="submit" class='btn btn-success'>Envoyer</button>
                            </div>
                        {{ form_end(carousel) }}
                    </div>
                {% endif %}
            </div>  
        </div>
{% endblock %}
