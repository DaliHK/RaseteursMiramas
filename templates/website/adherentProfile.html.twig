{% extends 'base.html.twig' %}

{% block title %}Hello WebsiteController!{% endblock %}

{% block body %}
<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    <div class="container">
    
        <div class="row justify-content-center">
            <div class="shadow mt-1 p-3 mb-5 bg-warning rounded p-center">
                <div>
                    <h4>Information Personnelle</h4>
                </div>
            </div>
        </div>
    
        <!-- Information personnelle de l'adhérent -->
        <div class="row offset-3">
            <div class="col">
                <h4>Nom: {{user.nom}}</h4>
            </div>
            <div class="col">
