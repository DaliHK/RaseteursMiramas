{% extends 'baseAdmin.html.twig' %}

{% block title %}Liste Adherents{% endblock %}

{% block body %}
{% block content %}
                    <!-- We'll fill this with dummy content -->
                    <nav class="navbar navbar-expand-lg navbar-light bg-light navbar-text">
                            <div class="container">
            
                                <button type="button" id="sidebarCollapse" class="btn btn-info">
                                    <i class="fas fa-align-left"></i>
                                    <span>Menu</span> 
                                </button>
                                 <h3 class="ml-5">Liste des adhérents</h3>
                            </div>
                    </nav>
{% endblock %}

<div class="container-fluid">
                            <div class="form_row inline">
                                {{ form_start(form) }}
                                <div class="col-3">
                                {{ form_row(form.nom) }}
                               </div>
                               {{ form_end(form) }}
                            </div>      
                        </div>     
    <table class="table table-hover mt-5">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Date Naissance</th>
                <th>Date Inscription</th>
                <th>Email</th>
                <th>Telephone</th>
                <th>Numero Urgence</th>
                <th>Statut</th>
                <th>Cotisation Asso</th>
                <th>Cotisation Licence</th>
                <th>NumLicence</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for adherent in adherents %}
            <tr>
                <td>{{ adherent.id }}</td>    
                <td>{{ adherent.nom }}</td>
                <td>{{ adherent.prenom }}</td>
                <td>{{ adherent.dateNaissance ? adherent.dateNaissance | date('d/m/Y') }}</td>
                <td>{{ adherent.dateInscription ? adherent.dateInscription | date('d/m/Y') }}</td>
                <td>{{ adherent.email }}</td>
                <td>{{ adherent.telephone }}</td>
                <td>{{ adherent.numLicence }}</td>
                <td>{{ adherent.statut }}</td>
                <td>{{ adherent.cotisationAsso ? 'Yes' : 'No' }}</td>
                <td>{{ adherent.cotisationLicence ? 'Yes' : 'No' }}</td>
                <td>{{ adherent.numLicence }}</td>
                <td>
                    <a href="{{ path('adherent_show', {'id': adherent.id}) }}" class="btn btn-primary mt-2">Voir</a>
                    <a href="{{ path('adherent_edit', {'id': adherent.id}) }}" class="btn btn-primary mt-2">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="19">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('adherent_new') }}" class="btn btn-primary">Créer un Adhérent</a>
{% endblock %}
